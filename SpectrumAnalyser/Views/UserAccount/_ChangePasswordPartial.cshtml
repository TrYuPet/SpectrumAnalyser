@model SpectrumAnalyser.Models.LocalPasswordModel
<link rel="stylesheet" type="text/css" href="~/Content/style/colour.css" />
<h3>Смена пароля</h3>
<div id="content">
    @using (Html.BeginForm("Manage", "UserAccount"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <fieldset>
            <legend>Форма изменения пароля</legend>
            <ol>
                <li>
                    @Html.LabelFor(m => m.OldPassword)
                    @Html.PasswordFor(m => m.OldPassword)
                </li>
                <li>
                    @Html.LabelFor(m => m.NewPassword)
                    @Html.PasswordFor(m => m.NewPassword)
                </li>
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </li>
            </ol>
            <input type="submit" value="Смена пароля" />
        </fieldset>
    }
</div>