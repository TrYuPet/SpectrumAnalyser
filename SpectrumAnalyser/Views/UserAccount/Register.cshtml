@model SpectrumAnalyser.Models.RegisterModel
<link rel="stylesheet" type="text/css" href="~/Content/style/colour.css" />
@{
    ViewBag.Title = "Регистрация";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Создание новой учетной записи.</h2>
</hgroup>
<div id="side_menu">
 
</div>
<div id="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <fieldset>
            <legend>Форма регистрации</legend>
            <ol>
                <li>
                    @Html.LabelFor(m => m.Login)
                    @Html.TextBoxFor(m => m.Login)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                </li>
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </li>
                <li>
                    @Html.LabelFor(m => m.UserFirstName)
                    @Html.TextBoxFor(m => m.UserFirstName)
                </li>
                <li>
                    @Html.LabelFor(m => m.UserLastName)
                    @Html.TextBoxFor(m => m.UserLastName)
                </li>
                <li>
                    @Html.LabelFor(m => m.UserMiddleName)
                    @Html.TextBoxFor(m => m.UserMiddleName)
                </li>
                <li>
                    @Html.LabelFor(m => m.UserEmail)
                    @Html.TextBoxFor(m => m.UserEmail)
                </li>
                <li>
                    @Html.LabelFor(m => m.UserPhoneNumber)
                    @Html.TextBoxFor(m => m.UserPhoneNumber)
                </li>
                <li>
                    @Html.LabelFor(m => m.UserMobilePhoneNumber)
                    @Html.TextBoxFor(m => m.UserMobilePhoneNumber)
                </li>
            </ol>
            <input type="submit" value="Сохранить и продолжить" />
        </fieldset>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>