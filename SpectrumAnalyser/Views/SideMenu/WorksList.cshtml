@model IEnumerable<SpectrumAnalyser.Models.BD.tbl_14_WorksOfArt>
<link rel="stylesheet" type="text/css" href="~/Content/style/colour.css" />
<div id="side_menu">

</div>

<div id="content">
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PictureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PicturePhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(model => item.PictureName)
                </th>
                <td>
                    @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.PicturePhoto) + "\" />")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>


                @*<td>
                    @Html.ActionLink("Просмотреть", "ListWorkOfArt", new { id = item.PictureId }) |
                </td>*@
            </tr>
        }

    </table>
</div>