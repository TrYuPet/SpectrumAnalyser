<!DOCTYPE html>
<html lang="ru">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title — приложение ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @*<script src="~/Scripts/menu.js"></script>
        <script src="~/Scripts/jquery-1.8.2.js"></script>
        <script src="~/Scripts/jquery-1.8.2.intellisense.js"></script>
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
        <script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
        <script src="http://code.jquery.com/jquery-latest.js"></script>*@

    </head>
    <body>
        <header>
            @*<div class="content-wrapper">*@
                <div id="logo">
                    <h1>СПЕКТРАЛЬНЫЙ АНАЛИЗ@*@Html.ActionLink("photography", "Index", "Home")*@</h1>
                    <div id="links">
                        @Html.Partial("_LoginPartial")
                    </div>
                    <div id="colours">
                        <a href="_Layout.cshtml"><img src="~/Content/style/green.png" alt="green colour scheme" /></a>&nbsp;
                        <a href="index_blue.html"><img src="~/Content/style/blue.png" alt="blue colour scheme" /></a>&nbsp;
                        <a href="index_red.html"><img src="~/Content/style/red.png" alt="red colour scheme" /></a>&nbsp;
                        <a href="index_purple.html"><img src="~/Content/style/purple.png" alt="purple colour scheme" /></a>&nbsp;
                        <a href="index_orange.html"><img src="~/Content/style/orange.png" alt="orange colour scheme" /></a>&nbsp;
                    </div>
                </div>
                     <nav>
                         <div id="menu">
                             @Html.Partial("~/Views/Shared/_menu.cshtml")
                         </div>         

                    </nav>
                

        </header>
        <div id="body">

            @RenderSection("featured", required: false)
            <div id="site_content">
                @RenderBody()
            </div>
        </div>
        <footer>
            <div id="site_content">

                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year —  ASP.NET MVC</p>
                </div>
            </div>
        </footer>
   @section Scripts {
     @Scripts.Render("~/bundles/jquery")

   }
        @RenderSection("scripts", required: false)
    </body>
</html>
